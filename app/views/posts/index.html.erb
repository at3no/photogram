<div class="container">
<div class="wrapper">
<p><% notice %></p>

<h1>投稿一覧</h1>
<%= link_to "投稿を作成する", new_post_path, class: 'btn btn-default' %>
<% @posts.each do |post| %>
<div class="row">
  <p>タイトル:<%= post.title %></p>
  <p>本文:<%= post.content %></p>
  <p><%= image_tag post.image.thumb.url %></p>
  <%= link_to "投稿を編集する", edit_post_path(post.id), class: 'btn btn-default btn-sm btn-success' %>
  <br>
  <%= link_to '投稿を削除する', post_path(post), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
</div>
<% end %>
</div>
<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
