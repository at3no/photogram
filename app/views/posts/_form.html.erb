<%= form_for(@post, url: choose_new_or_edit, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages! %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.label :image %>
　<%= image_tag @post.image.thumb.url if @post.image? %>
　<%= f.file_field :image %>
　<%= f.hidden_field :image_cache %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "投稿一覧画面にもどる", posts_path %>
